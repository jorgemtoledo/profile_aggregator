<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title">
          <%= title %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with model: profile, local: true do |f| %>
        <% if profile.new_record? %>
          <div class="modal-body">
            <div class="mb-3">
              <%= f.label :github_username, "Username do GitHub", class: "form-label" %>
              <%= f.text_field :github_username,
                    class: "form-control",
                    placeholder: "ex: octocat",
                    required: true %>
            </div>
            <div class="mb-3">
              <%= f.label :github_url, "URL do GitHub", class: "form-label" %>
              <%= f.url_field :github_url,
                    class: "form-control",
                    placeholder: "https://github.com/octocat",
                    required: true %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              Cancelar
            </button>
            <%= f.submit submit_label, class: "btn btn-primary" %>
          </div>
        <% else %>
          <div class="modal-body">
            <div class="mb-3">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :github_url, "URL do GitHub", class: "form-label" %>
              <%= f.url_field :github_url, class: "form-control", required: true %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              Cancelar
            </button>
            <%= f.submit submit_label, class: "btn btn-primary" %>
          </div>
        <% end %>        
      <% end %>
    </div>
  </div>
</div>
